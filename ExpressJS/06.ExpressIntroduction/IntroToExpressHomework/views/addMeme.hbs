<h1>Add New Meme</h1>
<div class="container">
    <form action="/addMeme" method="POST">
        <label for="movieTitle">Title</label>
        <input type="text" id="movieTitle" name="title" placeholder="The title of the meme">

        <select name='genreSelect' id="genreSelect">
            {{#each genres}}
                <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>

        <label for="moviePoster">Poster URL</label>
        <input type="file" id="moviePoster" name="name" placeholder="Link to a poster">

        <input type="checkbox" name='status' id='status' checked> public

        <label for="movieDescription">Movie description</label>
        <textarea id="movieDescription" name="description" placeholder="Movie description" rows="10" cols="10"></textarea>

        <input type="submit" value="Submit">

    </form>
</div>